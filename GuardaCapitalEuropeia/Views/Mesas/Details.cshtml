@model GuardaCapitalEuropeia.Models.Mesa

@{
    ViewData["Title"] =  @Html.DisplayFor(model => model.Numero);
}

<style>
    body {
        background-color: black;
    }

    table {
        background-color: #353636;
    }

    th {
        color: white;
    }

    h1 {
        color: white;
        text-align: center;
    }

    h2 {
        color: white;
        text-align: center;
    }

    h4 {
        color: white;
        text-align: center;
    }

    .btn-style {
        color: black;
        background-color: white;
        font-weight: bold;
        box-shadow: 0 9px #999;
    }

        .btn-style:hover {
            background-color: #a7a6a6;
