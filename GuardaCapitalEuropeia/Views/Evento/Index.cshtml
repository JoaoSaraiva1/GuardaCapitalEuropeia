@model IEnumerable<GuardaCapitalEuropeia.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}
<style>
    body {
        background-color: black;
    }

    table {
        background-color: #353636;
    }

    th {
        color: white;
    }

    p {
        color: white;
        margin-left: 30px;
    }

    tr {
        color: white;
    }

    a {
        color: lightslategray;
    }
    h1{
        color:white;
    }
</style>

<h1>Eventos</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entrada)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrada)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EventoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EventoId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
