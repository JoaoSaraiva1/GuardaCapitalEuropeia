    body {
        background-color: black;
        text-align: center;
    }

    table {
        background-color: #353636;
        text-align: center;
    }

    th {
        color: white;
    }

    .center {
        margin-left: auto;
        margin-right: auto;
    }

    .whiteout {
        color: white;
    }

    h1 {
        color: white;
