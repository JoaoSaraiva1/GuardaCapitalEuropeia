@model GuardaCapitalEuropeia.Models.Prato

@{
    ViewData["Title"] = "Ementa";
}
<style>
    body {
        background-color: black;
    }

    table {
        background-color: #353636;
    }

    th {
        color: white;
    }

    h1 {
        color: white;
        text-align: center;
    }

    h2 {
        color: white;
        text-align: center;
    }

    h4 {
        color: white;
        text-align: center;
    }
</style>

<h1>Editar</h1>

<h4>prato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PratoID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alergénicos" class="control-label"></label>
                <input asp-for="Alergénicos" class="form-control" />
                <span asp-validation-for="Alergénicos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestauranteId" class="control-label"></label>
                <input asp-for="RestauranteId" class="form-control" />
                <span asp-validation-for="RestauranteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar á lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
